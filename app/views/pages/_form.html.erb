<div class="col-5 mb-3">
    <%= f.label(:position, class:'mt-3') %>
        <%= f.select(:position, 1..@page_count, {:prompt=> true}, class:'form-select') %>
            <% if @page.errors.any? %>
                <% @page.errors.full_messages_for(:position).each do |error| %>
                    <span>
                        <li class="text-danger">
                            <%= error %>
                        </li>
                    </span>
                <% end %>
            <% end %>
</div>
<div class="col-5 mb-3">
    <%= f.label(:subject_id, class:'mt-3') %>
        <%= collection_select(:page, :subject_id, Subject.all, :id, :name, {:prompt=> true}, class:'form-select') %>
        <% if @page.errors.any? %>
        <% @page.errors.full_messages_for(:subject_id).each do |error| %>
        <span>
            <li class="text-danger"> <%= error %></li>
        </span>
        <% end %>
        <% end %>
</div>
