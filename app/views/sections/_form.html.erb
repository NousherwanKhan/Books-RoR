            <% if @section.errors.any? %>
                <% @section.errors.full_messages_for(:content).each do |error| %>
                    <span>
                        <li class="text-danger">
                            <%= error %>
                        </li>
                    </span>
                    <% end %>
                        <% end %>
</div>

