<div class="mb-3">
    <%= f.label(:position, class:'mt-3') %>
        <%= f.select(:position, 1..@section_count, {:prompt=> true}, class:'form-select') %>
            <% if @section.errors.any? %>
                <% @section.errors.full_messages_for(:position).each do |error| %>
                    <span>
                        <li class="text-danger">
                            <%= error %>
                        </li>
                    </span>
                <% end %>
            <% end %>
</div>
<div class="mb-3">
    <%= f.label(:page_id, class:'mt-3') %>
        <%= f.select(:page_id, @page.map {|s| [s.name, s.id]},{prompt: true}, class:'form-select') %>
            <% if @section.errors.any? %>
                <% @section.errors.full_messages_for(:page_id).each do |error| %>
                    <span>
                        <li class="text-danger">
                            <%= error %>
                        </li>
                    </span>
                <% end %>
            <% end %>
</div>
<div class="mb-3">
    <%= f.label(:name, class:'mt-3') %>
